
  <h1>Blog Posts</h1>

  <a href = "/add"> Create New Post </a>
  </br></br>

  {{#each post}}
    <div class="post">
        <div class="post-title" onclick="location.href='/post/{{index}}'" style = "cursor:pointer;">{{title}}</div>
        <div class="post-date">{{date}}</div>
        <div class="post-content">
        <p> 
            <pre>{{content}}</pre>
        </p>
        </div>
    </div>
    {{else}}
        No posts
    {{/each}}

