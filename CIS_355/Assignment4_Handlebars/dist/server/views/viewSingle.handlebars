<h1>Viewing Single Post</h1>
     
<p>
    <div class = "post">
        <div class = "post-title">{{title}}</div>
        <div class = "post-date">{{date}}</div>
        <div class = post-content>
            <p>
                <pre>{{content}}</pre>
            </p>  
        </div> 
    </div>      
</p>

{{#if hasPrevious}}
    <a href = "{{previousIndex}}">Previous</a>
{{/if}}
{{#if hasNext}}
    <a href = "{{nextIndex}}">Next</a>
{{/if}}

