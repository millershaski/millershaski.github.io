<div class="card">
    <div class="card-body">
        <h1 class="card-title">{{author.name}}</h1>
        <div class="row mb-4">
            <div class="col-md-6">
                <p><strong>Birth Year:</strong> {{author.birthYear}}</p>
            </div>
        </div>

        {{#if author.bio}}
        <div class="row mb-4">
            <div class="col">
                <h5>Description</h5>
                <p>{{author.bio}}</p>
            </div>
        </div>
        {{/if}}

        <div class="btn-group">
            <a href="/authors/{{author.id}}/edit" class="btn btn-warning">Edit</a>
            <form class="d-inline" action="/authors/{{author.id}}/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this author?')">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <a href="/authors" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div> 